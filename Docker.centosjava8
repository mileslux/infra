FROM centos

RUN yum update -y
RUN yum install -y mc

RUN curl --insecure --junk-session-cookies --location --remote-name --silent --header "Cookie: oraclelicense=accept-securebackup-cookie" http://download.oracle.com/otn-pub/java/jdk/8u45-b14/jdk-8u45-linux-x64.rpm

RUN yum localinstall -y jdk-8u45-linux-x64.rpm
RUN rm jdk-8u45-linux-x64.rpm

ENV JAVA_HOME /usr/java/default

